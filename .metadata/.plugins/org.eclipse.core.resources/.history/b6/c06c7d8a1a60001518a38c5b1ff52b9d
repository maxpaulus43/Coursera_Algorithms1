package week2;

import java.util.Arrays;
import java.util.Collection;

import week3.Merge;
import edu.princeton.cs.algs4.StdOut;
import edu.princeton.cs.algs4.StdRandom;
import edu.princeton.cs.algs4.Stopwatch;

public class Shell { 
	
	private Shell() {}
	
	public static void sort(Comparable[] a) throws Exception {
		int N = a.length;
		
		int delta = 1;
		while (delta < N/3) {
			delta = 3 * delta + 1; //1, 4, 13, 40, 121, ...
		}
		
		while (delta >= 1) {
			Insertion.sort(delta, a);
			delta /= 3;
		}
	}
	
	public static void print(Object[] a) {
		StdOut.print("[");
		for (int i = 0; i < 20; i++) {
			StdOut.print(" " + a[i] + " ");
		}
		StdOut.print("... ]");
		StdOut.println();
	}
	
	public static void main(String[] args) {
		int N = 1000000;
		Integer[] nums = new Integer[N];
		Integer[] nums2 = new Integer[N];
		
		for (int i = 0; i < N; i++) {
			Integer n = StdRandom.uniform(N);
			nums[i] = n;
			nums2[i] = n;
		}
		print(nums);
		
		try {
			Stopwatch sw = new Stopwatch();
			Shell.sort(nums2);
			StdOut.printf("Shell.sort Elapsed time: %f\n", sw.elapsedTime());
			print(nums2);
			
			
			sw = new Stopwatch();
			Arrays.sort(nums);
			StdOut.printf("\nArrays.sort Elapsed time: %f\n", sw.elapsedTime());
			print(nums);
			
			sw = new Stopwatch();
			Merge.sort(nums);
			StdOut.printf("\nMerge.sort Elapsed time: %f\n", sw.elapsedTime());
			print(nums);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
}
